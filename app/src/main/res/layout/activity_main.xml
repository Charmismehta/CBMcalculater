<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@drawable/grayborder"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:entries="@array/unit"
        android:prompt="@string/unit_prompt" />
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/grayborder"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:inputType="number"
            android:id="@+id/et_length"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:hint="Length"
            android:textColor="@color/black"
            android:textColorHint="@color/Gray" />

        <ImageView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vc_close"/>
        <EditText
            android:inputType="number"
            android:id="@+id/et_width"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_gravity="center"
            android:hint="Width"
            android:textColorHint="@color/Gray"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            />
        <ImageView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vc_close"/>
        <EditText
            android:inputType="number"
            android:id="@+id/et_height"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_gravity="center"
            android:hint="Height"
            android:textColorHint="@color/Gray"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            />
    </LinearLayout>
    <View
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"/>
<LinearLayout
    android:padding="@dimen/_5sdp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<TextView
    android:id="@+id/tv_cbm"
    android:layout_marginBottom="@dimen/_5sdp"
    android:layout_gravity="center"
    android:layout_weight="1"
    android:layout_width="@dimen/_170sdp"
    android:layout_height="wrap_content"
    android:text="CBM"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginLeft="@dimen/_10sdp"
    android:textSize="@dimen/_20sdp"
    android:textColor="@color/black" />

    <ImageView
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/vc_equals"/>

    <EditText
        android:id="@+id/et_cbm"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:textColorHint="@color/Gray"
        android:layout_weight="1"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:background="@drawable/grayborder"
        />
    <TextView
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_width="@dimen/_240sdp"
        android:layout_height="wrap_content"
        android:text="Cubic meter"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:textSize="@dimen/_20sdp"
        android:textColor="@color/black" />
</LinearLayout>

    <View
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"/>
    <LinearLayout
        android:padding="@dimen/_5sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_cft"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="@dimen/_170sdp"
            android:layout_height="wrap_content"
            android:text="CFT"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/black" />

        <ImageView
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vc_equals"/>

        <EditText
            android:id="@+id/et_cft"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textColorHint="@color/Gray"
            android:layout_weight="1"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:background="@drawable/grayborder"
            />
        <TextView
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="@dimen/_240sdp"
            android:layout_height="wrap_content"
            android:text="Cubic feet"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/black" />
    </LinearLayout>

    <View
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"/>
    <LinearLayout
        android:padding="@dimen/_3sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/black" />

        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Space"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:text="Free Space"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="wrap_content"
            />
    </LinearLayout>


    <LinearLayout
        android:padding="@dimen/_3sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:text="20ft Container"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/black" />

        <EditText
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textColorHint="@color/Gray"
            android:layout_weight="1"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="wrap_content"
            android:background="@drawable/grayborder"
            />
        <EditText
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textColorHint="@color/Gray"
            android:layout_weight="1"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="wrap_content"
            android:background="@drawable/grayborder"
            />
    </LinearLayout>

    <View
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"/>
    <LinearLayout
        android:padding="@dimen/_3sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:text="40ft Container"
            android:layout_marginTop="@dimen/_5sdp"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/black" />

        <EditText
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textColorHint="@color/Gray"
            android:layout_weight="1"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="wrap_content"
            android:background="@drawable/grayborder"
            />
        <EditText
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textColorHint="@color/Gray"
            android:layout_weight="1"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="wrap_content"
            android:background="@drawable/grayborder"
            />
    </LinearLayout>
    <View
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"/>
    <LinearLayout
        android:padding="@dimen/_3sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:text="40ft  HC Container"
            android:layout_marginTop="@dimen/_5sdp"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/black" />

        <EditText
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textColorHint="@color/Gray"
            android:layout_weight="1"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="wrap_content"
            android:background="@drawable/grayborder"
            />
        <EditText
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textColorHint="@color/Gray"
            android:layout_weight="1"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="wrap_content"
            android:background="@drawable/grayborder"
            />
    </LinearLayout>

</LinearLayout>